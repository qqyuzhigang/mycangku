        .artsp3
          color #fb4e55





    .articleLayOut
      width 85%
      height 100%
      margin 0 auto
      margin-bottom 50px
      display flex
      .articleLeft
        width 80%
        height 100%
        .artLTop
          width 100%
          height 200px
          border-bottom 1px solid #e5e5e5
