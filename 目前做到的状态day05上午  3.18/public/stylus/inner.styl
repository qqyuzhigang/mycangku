              width 30px
              color #111
              padding-bottom 7px
              border-bottom 4px solid #fb474f


          .profile
            line-height 28px
            margin 10px 25px 25px
            font-size 16px
            >pre
              line-height 24px
              margin 15px 0 5px
              font-size 14px
              background-color #fff
              border-radius 0
              color: #333;
              word-break break-all
              word-wrap break-word
              padding 9.5px


          .chengshi
            margin 20px 0 10px
            .shijian
              margin-right 10px
              b
                color #fb474f
          .profile1,.profile2
            margin 0px
            line-height 28px
            >pre
              line-height 24px
              margin 15px 0 0px
              font-size 14px
              background-color #fff
              color: #333;






      .articleRight
        width 20%
        height 100%
        >a
