body,html
  min-width 1120px
  height 100%
#wrap
  height 100%
  width 100%
  background #fff

  #head
    width 100%
    height 72px
    background #fff
    position relative
    border-bottom 2px solid #E5E5E5
    &.slodDown
      top 0
      transform translateY(0)
      animation animt 1s
      @keyframes animt {
        0%{
          transform translateY(-100%)
        }
        100%{
          transform translateY(0)
        }



      }


    .headContainer
      height 100%
      width 85%
      padding 0 15px
      margin 0 74.5px
      background #fff
      display flex
      justify-content space-between
      align-items center
      .navbar-right
        height 100%
        width 70%
        width 1170px
        display flex
        justify-content space-between
        align-items center
        a
          color #000
          font-weight bold
        .navbar-right-left
          margin-left 50px
          .qh:hover
            color #EA4942
          .on
            color #EA4942
          .on:hover
            color #EA4942
          i
            color #EA4942

        .navbar-right-right
          height 100%
          width 70%
          display flex
          justify-content space-around
          align-items center
          .on
            color #E94840
          a:hover
            color #E94840
          .dl
            background #E94840
            border-radius 10%
            color #FBFFFF
            padding 5px
            &:hover
              color #FBFFFF




  .article
    width 100%
    .artTitle
      height 85px
      width 100%

      .artTContain
        width 85%
        height 100%
